{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",

		"outDir": "bin",
		"rootDir": "src",
		"sourceMap": true,
		"declaration": true,

		"baseUrl": ".",
		"paths": {
			"fugazi.connector.node": ["../node_modules/fugazi.connector.node/scripts/bin"]
		},

		"skipLibCheck": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"removeComments": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"skipDefaultLibCheck": true
	},
	"exclude": [
		"../node_modules"
	]
}